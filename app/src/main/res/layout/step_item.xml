<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin"
    android:paddingEnd="@dimen/margin_large"
    android:paddingStart="@dimen/margin_large"
    android:paddingTop="@dimen/margin">

    <TextView
        android:id="@+id/step_id"
        android:layout_width="@dimen/number_circle_diameter"
        android:layout_height="@dimen/number_circle_diameter"
        android:background="@drawable/number_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="9" />

    <TextView
        android:id="@+id/step_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/ingredientTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Bake bake bake bake bake bake bake bake bake bake" />

</LinearLayout>