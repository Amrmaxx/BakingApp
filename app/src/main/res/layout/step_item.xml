<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin"
    android:paddingEnd="@dimen/margin_large"
    android:paddingStart="@dimen/margin_large"
    android:paddingTop="@dimen/margin">

    <TextView
        android:id="@+id/step_id"
        android:layout_width="@dimen/number_circle_diameter"
        android:layout_height="@dimen/number_circle_diameter"
        android:background="@drawable/number_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        tools:text="9" />

    <TextView
        android:id="@+id/step_description"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/step_id"
        android:layout_toStartOf="@+id/video_icon"
        android:layout_centerInParent="true"
        android:paddingStart="@dimen/margin_large"
        android:ellipsize="end"
        android:lines="1"

        android:textColor="@color/ingredientTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Bake bake bake bake bake bake bake bake bake bake " />

    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="@dimen/number_circle_diameter"
        android:layout_height="@dimen/number_circle_diameter"
        android:src="@drawable/ic_videocam"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>